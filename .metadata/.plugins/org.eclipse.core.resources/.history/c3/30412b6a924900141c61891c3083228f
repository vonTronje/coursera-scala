package recfun
import common._

object Main {
  def main(args: Array[String]) {
    println("Pascal's Triangle")
    for (row <- 0 to 10) {
      for (col <- 0 to row)
        print(pascal(col, row) + " ")
      println()
    }
  }

  /**
   * Exercise 1
   */
  def pascal(c: Int, r: Int): Int = {
    if (c == 0 || c == r ) 1
    else pascal(c - 1, r - 1) + pascal(c, r - 1 ) 
  }

  /**
   * Exercise 2
   */
  def balance(chars: List[Char]): Boolean = {
    if (chars.isEmpty) true
    else if(chars.head == "(") balance_rest(1, chars.tail)
  }
  
  def balance_rest(counter: Int, chars: List[Char]): Boolean = {
    if(chars.head == ")") balance_rest(counter - 1, chars.tail)
    else if (chars.isEmpty) counter == 0
    else balance_rest(counter, chars.tail) 
  }

  /**
   * Exercise 3
   */
  def countChange(money: Int, coins: List[Int]): Int = ???
}
